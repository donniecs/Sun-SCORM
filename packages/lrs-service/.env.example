# LRS Service Environment Variables

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rustici_killer
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# xAPI Configuration
XAPI_VERSION=1.0.3
STATEMENT_BATCH_SIZE=1000
STATEMENT_TIMEOUT=30000
MAX_STATEMENT_SIZE=1048576
ATTACHMENT_MAX_SIZE=10485760

# Security Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Analytics Configuration
ANALYTICS_CACHE_TTL=3600
ANALYTICS_BATCH_SIZE=10000
AGGREGATION_TIMEOUT=60000

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:3000
SERVICE_NAME=lrs-service
SERVICE_VERSION=0.1.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/lrs-service.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
DEPENDENCY_TIMEOUT=5000

# Performance Configuration
STATEMENT_INDEX_FIELDS=actor,verb,object,timestamp
QUERY_TIMEOUT=30000
MAX_QUERY_RESULTS=1000
CACHE_STATEMENTS=true
CACHE_TTL=3600
