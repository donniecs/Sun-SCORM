# SCORM Runtime Service Environment Configuration
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=3003
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Redis Configuration (for session state)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=scorm_session:
REDIS_TTL=3600

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rustici_killer

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# SCORM Configuration
SCORM_SESSION_TIMEOUT=3600
SCORM_MAX_SUSPEND_DATA_SIZE=65536
SCORM_ENABLE_DEBUG_MODE=true

# Sequencing Engine Service
SEQUENCING_ENGINE_URL=http://localhost:3005

# Security
SESSION_SECRET=your-session-secret-here
LAUNCH_TOKEN_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=5000
