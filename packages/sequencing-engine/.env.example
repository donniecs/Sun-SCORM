# Sequencing Engine Environment Variables

# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rustici_killer
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# SCORM Sequencing Configuration
SCORM_VERSION=2004
SEQUENCING_TIMEOUT=30000
NAVIGATION_TIMEOUT=10000
ROLLUP_TIMEOUT=15000
MAX_ACTIVITY_DEPTH=10
MAX_SEQUENCING_ATTEMPTS=100

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000
MAX_CONCURRENT_SESSIONS=1000

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:3000
SERVICE_NAME=sequencing-engine
SERVICE_VERSION=0.1.0

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=500

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/sequencing-engine.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
DEPENDENCY_TIMEOUT=5000

# Performance Configuration
ACTIVITY_TREE_CACHE_TTL=3600
SEQUENCING_RULES_CACHE_TTL=7200
NAVIGATION_CACHE_TTL=300
ENABLE_SEQUENCING_CACHE=true
