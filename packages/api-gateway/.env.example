# API Gateway Environment Configuration - Phase 2
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3006

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Microservice URLs
CONTENT_INGESTION_URL=http://localhost:3002
SCORM_RUNTIME_URL=http://localhost:3000
LRS_SERVICE_URL=http://localhost:3005
SEQUENCING_ENGINE_URL=http://localhost:3004
WEBHOOK_EMITTER_URL=http://localhost:3007

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
